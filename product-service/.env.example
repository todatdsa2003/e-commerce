# ===================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# ===================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to Git!

# Spring Profile
SPRING_PROFILES_ACTIVE=dev

# Server Configuration
SERVER_PORT=8080

# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/product_service_db
DB_USERNAME=your_database_username
DB_PASSWORD=your_database_password

# File Upload
UPLOAD_DIR=uploads/products

# Gemini API (for AI features)
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: JWT Configuration (if using authentication)
# JWT_SECRET=your_jwt_secret_key_here
# JWT_EXPIRATION=86400000

# Optional: Email Configuration (if needed)
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your_email@gmail.com
# MAIL_PASSWORD=your_app_password

# Optional: Cloud Storage (if using AWS S3, Azure Blob, etc.)
# CLOUD_STORAGE_BUCKET=your_bucket_name
# CLOUD_STORAGE_ACCESS_KEY=your_access_key
# CLOUD_STORAGE_SECRET_KEY=your_secret_key
